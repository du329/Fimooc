.personalHeader {
  margin-bottom: 10rpx;
  height: 178rpx;
  box-shadow: 0 10rpx 8rpx 0 rgba(0, 0, 0, 0.08);
}

.personalHeader__item {
  display: flex;
  align-items: center;
}

.personalHeader__img {
  margin: 0 30rpx;
  overflow: hidden;
  border-radius: 50%;
  width: 140rpx;
  height: 140rpx;
}

.personalHeader__img image {
  width: 100%;
  height: 100%;
}
.personalHeader__content .userName{
  margin-bottom: 10rpx;
  font-weight: 700;
  font-size: 40rpx;
}
.personalHeader__content .userMsg{
  font-size: 24rpx;
}
/* main */
.personalMain{
  height: 800rpx;
}
.personalMain__item{
  display: flex;
  height: 120rpx;
}
.personalMain__item__img{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
}
.personalMain__item__img image{
  width: 30rpx;
  height: 30rpx;
}
.personalMain__item__content{
  flex-grow: 1;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.30);
}
.ljp{
  border-bottom: 0rpx solid rgba(0, 0, 0, 0.30);
}